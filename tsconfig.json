{
  "compilerOptions": {
    "incremental": true,
    "lib": ["ESNext"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "prisma/**/*"]
}
