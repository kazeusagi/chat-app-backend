{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": false,
    "outDir": "dist",
    "extendedDiagnostics": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
